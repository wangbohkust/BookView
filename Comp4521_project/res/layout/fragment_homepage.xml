<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
       
         <ImageView
             android:id="@+id/homepage_icon"
             android:layout_width="150dp"
             android:layout_height="150dp"
             android:layout_gravity="center_horizontal"
             android:layout_marginTop="30dp"
             android:contentDescription="Image of User"
             android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/homepage_email"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_weight="0.97"
            android:gravity="center"
            android:text="useremail"
            android:textSize="20sp" />

       
        <TextView
            android:id="@+id/homepage_username"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:ellipsize="marquee"
            android:gravity="center"
            android:paddingTop="3dp"
            android:singleLine="true"
            android:text="username"
            android:textSize="20sp" />

       

    </LinearLayout>

     <fragment
         android:id="@+id/homepage_fragment"
         android:name="activity.home.HomePageListFragment"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="5dp"
         android:layout_weight="0.88" />

</LinearLayout>